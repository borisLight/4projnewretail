<%- include('header') -%>
<%- include('navbar') -%>
<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title">Liste de Clients</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="/">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li><a class="parent-item" href="">Clients</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li class="active">Liste de Clients</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="tabbable-line">
                    <ul class="nav nav-pills nav-pills-rose">
                        <li class="nav-item tab-all"><a class="nav-link active show"
                            href="#tab1" data-toggle="tab">List View</a></li>
                        <li class="nav-item tab-all"><a class="nav-link" href="#tab2"
                            data-toggle="tab">Grid View</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active fontawesome-demo" id="tab1">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card  card-box">
                                        <div class="card-head">
                                            <header></header>
                                            <div class="tools">
                                                <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                                                <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                                                <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                                            </div>
                                        </div>
                                        <div class="card-body ">
                                          <div class="table-scrollable">
                                            <table class="table table-hover table-checkable order-column full-width" id="example4">
                                                <thead>
                                                    <tr>
                                                        <th></th>
                                                        <th> Name </th>
                                                        <th> Sex </th>
                                                        <th> Address </th>
                                                        <th> Mobile </th>
                                                        <th> Birth Date </th>
                                                        <th>Email</th>
                                                        <th> Action </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% data.forEach(function(d) { %>
                                                        <tr class="odd gradeX">
                                                            <td class="patient-img">
                                                                    <img src="../assets/avatar/<%= d.avatar %>" alt="">
                                                            </td>
                                                            <td><%= d.lastName %>&nbsp;<%= d.userName %></td>
                                                            <td class="center"><%= d.gender %></td>
                                                            <td class="center"><%= d.address %></td>
                                                            <td><a href="tel:<%= d.phone1 %>">
                                                                <%= d.phone1 %> </a></td>
                                                            <td class="center"><%= d.birthday %></td>
                                                            <td class="center"><%= d.email %></td>
                                                            <td class="center">
                                                                <a href="" class="btn btn-tbl-edit btn-xs">
                                                                    <i class="fa fa-pencil"></i>
                                                                </a>
                                                                <a class="btn btn-tbl-delete btn-xs">
                                                                    <i class="fa fa-trash-o "></i>
                                                                </a>
                                                            </td>
                                                        </tr>  
                                                    <% }); %>
                                                    
                                                </tbody>
                                            </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                        <div class="tab-pane" id="tab2">
                            <div class="row">
                                <% data.forEach(function(d) { %>
                                <div class="col-md-4">
                                    <div class="card card-box">
                                        <div class="card-body no-padding ">
                                            <div class="doctor-profile">
                                                    <img src="../assets/avatar/<%= d.avatar %>" class="doctor-pic" alt=""> 
                                                <div class="profile-usertitle">
                                                    <div class="doctor-name"><%= d.lastName %>&nbsp;<%= d.userName %></div>
                                                    
                                                    <p><%= d.address %></p> 
                                                </div>
                                                    <div><p><i class="fa fa-phone"></i><a href="tel:(123)456-7890"> <%= d.phone1 %></a></p> </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('footer') -%>